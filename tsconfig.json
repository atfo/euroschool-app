{
  "compilerOptions": { // 1
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "outDir": "build",
    "rootDir": "common",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "exclude": [ // 2
    "index.android.js",
    "index.ios.js",
    "build",
    "node_modules",
    "__tests__",
    "webpack.haul.js",
    "postbuild.js",
    "coverage"
  ],
  "compileOnSave": true // 3
}